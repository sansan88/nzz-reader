{
  "manifest_version": 2,
  "name": "NZZ Reader",
  "version": "1.1",
  "description": "Toggle JavaScript and remove nzzinteraction class on NZZ.ch",
  
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}